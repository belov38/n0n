{
  "source": "n8n v2.3.6 - extracted from @n8n/design-system CSS source",
  "colors": {
    "primary": {
      "description": "Brand orange - used for primary actions, active states, links",
      "hsl": "hsl(7, 100%, 68%)",
      "hex_approx": "#FF5733",
      "tokens": {
        "--color--primary--shade-1": "darker orange (hover/active)",
        "--color--primary": "hsl(7, 100%, 68%) - orange-300",
        "--color--primary--tint-1": "hsl(7, 100%, 88%) - orange-200",
        "--color--primary--tint-2": "hsl(7, 100%, 93%) - orange-150",
        "--color--primary--tint-3": "hsl(7, 100%, 98%) - orange-50"
      }
    },
    "secondary": {
      "description": "Purple - used for expression editor, secondary accents",
      "tokens": {
        "--color--secondary--shade-1": "hsl(247, 49%, 43%) - purple-700",
        "--color--secondary": "hsl(247, 49%, 53%) - purple-600",
        "--color--secondary--tint-1": "hsl(247, 49%, 83%) - purple-300",
        "--color--secondary--tint-2": "hsl(247, 49%, 93%) - purple-200"
      }
    },
    "success": {
      "description": "Green - used for success states, node success, published workflows",
      "tokens": {
        "--color--success": "hsl(147, 60%, 40%) - green-600",
        "--color--success--tint-1": "hsl(146, 60%, 70%) - green-300",
        "--color--success--tint-4": "hsl(144, 60%, 95%) - green-50"
      }
    },
    "warning": {
      "description": "Gold/amber - used for warning states",
      "tokens": {
        "--color--warning": "hsl(?, ?, ?) - gold-600",
        "--color--warning--tint-2": "gold-50"
      }
    },
    "danger": {
      "description": "Red - used for errors, delete actions",
      "tokens": {
        "--color--danger": "red-600",
        "--color--danger--tint-3": "red-100",
        "--color--danger--tint-4": "red-50"
      }
    },
    "text": {
      "--color--text--shade-1": "hsl(0, 0%, 17%) - neutral-850 - primary text",
      "--color--text": "hsl(0, 0%, 46%) - neutral-600 - body text",
      "--color--text--tint-1": "hsl(0, 0%, 58%) - neutral-400 - placeholder text",
      "--color--text--tint-2": "hsl(0, 0%, 88%) - neutral-200 - disabled text",
      "--color--text--tint-3": "hsl(0, 0%, 100%) - white - text on colored backgrounds"
    },
    "background": {
      "--color--background--light-3": "hsl(0, 0%, 100%) - pure white - modals, nodes",
      "--color--background--light-2": "hsl(0, 0%, 99%) - neutral-50 - page background",
      "--color--background": "hsl(0, 0%, 96%) - neutral-125 - panel backgrounds",
      "--color--background--shade-1": "hsl(0, 0%, 88%) - neutral-200",
      "--color--background--shade-2": "hsl(0, 0%, 9%) - neutral-950 - dark overlays"
    },
    "foreground": {
      "--color--foreground": "hsl(0, 0%, 88%) - neutral-200 - borders, dividers",
      "--color--foreground--shade-1": "hsl(0, 0%, 80%) - neutral-250",
      "--color--foreground--shade-2": "hsl(0, 0%, 51%) - neutral-500",
      "--color--foreground--tint-1": "hsl(0, 0%, 93%) - neutral-150",
      "--color--foreground--tint-2": "hsl(0, 0%, 100%) - white"
    },
    "canvas": {
      "--canvas--color--background": "hsl(0, 0%, 96%) - neutral-125 - dotted canvas",
      "--canvas--dot--color": "hsl(0, 0%, 51%) - neutral-500 - dot grid"
    },
    "node": {
      "--node--color--background": "white - node cards",
      "--node--border-color--running": "primary orange",
      "--node--border-color--pinned": "secondary purple"
    },
    "sticky": {
      "--sticky--color--background": "hsl(?, ?, ?) - yellow-100 - default sticky note",
      "variants": "yellow, gold, red, green, blue, purple, neutral"
    },
    "execution-card-borders": {
      "success": "green-300",
      "error": "red-300",
      "waiting": "purple-300",
      "running": "gold-200"
    }
  },
  "typography": {
    "primaryFont": "InterVariable, sans-serif",
    "codeFont": "CommitMono (variable weight)",
    "fontSizes": {
      "--font-size--3xs": "10px",
      "--font-size--2xs": "12px",
      "--font-size--xs": "13px",
      "--font-size--sm": "14px",
      "--font-size--md": "16px",
      "--font-size--lg": "18px",
      "--font-size--xl": "20px",
      "--font-size--2xl": "28px"
    },
    "lineHeights": {
      "--line-height--sm": "1.25",
      "--line-height--md": "1.3",
      "--line-height--lg": "1.35",
      "--line-height--xl": "1.5"
    },
    "fontWeights": {
      "--font-weight--regular": "400",
      "--font-weight--bold": "600"
    },
    "usage": {
      "body": "16px / 400 weight",
      "buttons": "bold (600)",
      "inputs": "regular (400)"
    }
  },
  "spacing": {
    "--spacing--5xs": "2px",
    "--spacing--4xs": "4px",
    "--spacing--3xs": "6px",
    "--spacing--2xs": "8px",
    "--spacing--xs": "12px",
    "--spacing--sm": "16px",
    "--spacing--md": "20px",
    "--spacing--lg": "24px",
    "--spacing--xl": "32px",
    "--spacing--2xl": "48px",
    "--spacing--3xl": "64px",
    "--spacing--4xl": "128px",
    "--spacing--5xl": "256px"
  },
  "borderRadius": {
    "--radius--sm": "2px",
    "--radius": "4px (default)",
    "--radius--lg": "8px",
    "--radius--xl": "12px"
  },
  "borders": {
    "--border-width": "1px",
    "--border-style": "solid",
    "--border": "1px solid var(--color--foreground) - standard border"
  },
  "shadows": {
    "--shadow": "0 2px 4px rgba(0,0,0,.12), 0 0 6px rgba(0,0,0,.04)",
    "--shadow--dark": "0 2px 4px rgba(0,0,0,.12), 0 0 6px rgba(0,0,0,.12)",
    "--shadow--light": "0 2px 12px 0 rgba(0,0,0,.07)",
    "--shadow--card-hover": "0 2px 8px rgba(68,28,23,.1)"
  },
  "layout": {
    "sidebarWidth": "42px (collapsed)",
    "sidebarExpandedWidth": "200px",
    "nodeCreatorWidth": "385px",
    "headerHeight": "CSS variable --header--height"
  },
  "breakpoints": {
    "2xs": "600px",
    "xs": "768px",
    "sm": "992px",
    "md": "1200px",
    "lg": "1920px"
  },
  "buttons": {
    "primary": {
      "background": "orange-300 (--color--primary)",
      "text": "white",
      "border": "orange-300",
      "hover": "orange (darker)"
    },
    "secondary": {
      "background": "white",
      "text": "neutral-700",
      "border": "neutral-300",
      "hover": "orange-50 background, orange-300 border"
    }
  }
}
